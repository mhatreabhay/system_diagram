# Azure deployment configuration
# Copy this file to .env and fill in your values.

AZURE_SUBSCRIPTION=<your-subscription-id>
RESOURCE_GROUP=<your-resource-group>
ACR_NAME=<your-acr-name>
CONTAINER_NAME=<your-container-name>
IMAGE_NAME=systemdraw
DNS_LABEL=<your-dns-label>

# MCP Server
MCP_CONTAINER_NAME=<your-mcp-container>
MCP_IMAGE_NAME=archsketch-mcp
MCP_DNS_LABEL=<your-mcp-dns-label>

# Front Door (HTTPS)
FD_PROFILE_NAME=<your-frontdoor-profile>
FD_ENDPOINT_NAME=<your-endpoint-name>
FD_ORIGIN_GROUP=<your-origin-group>
FD_ORIGIN_NAME=<your-origin-name>
FD_SKU=Standard_AzureFrontDoor
